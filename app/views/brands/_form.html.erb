<%= form_with model: @brand do |form| %>
  <div class="form-group">
    <%= form.label :fantasy_name%>
    <%= form.text_field :fantasy_name, class: "form-control", placeholder: "Fantasy Name" %>
  </div>
  <div class="form-group">
    <%= form.label :description%>
    <%= form.text_area :description, class: "form-control", placeholder: "Description Name" %>
  </div>
  
  <%= form.submit @brand.new_record? ? "New" : "Update", class: 'btn btn-dark' %>
<% end %>
