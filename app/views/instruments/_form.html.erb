<%= form_with model: @instrument do |form| %>
  <div class="form-group">
    <%= form.label :serie %>
    <%= form.text_field :serie, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :line %>
    <%= form.text_field :line, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :price %>
    <%= form.text_field :price , class: "form-control" %> 
  </div>
  <div class="form-group">
    <%= form.label :brand %>
    <%= form.select :brand_id, Brand.all.map { |brand| [brand.fantasy_name, brand.id] }, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label :description %>
    <%= form.text_area :description,  class: "form-control" %>
  </div>  
  <%= form.submit @instrument.new_record? ? "New" : "Update", class: "btn btn-dark" %>
<% end %>
