<%= form_with model: @instrument do |form| %>
  <div class="form-group">
    <%= form.label I18n.t('.activerecord.model.instrument.serie') %>
    <%= form.text_field :serie, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label I18n.t('.activerecord.model.instrument.line') %>
    <%= form.text_field :line, class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label I18n.t('.activerecord.model.instrument.price') %>
    <%= form.text_field :price , class: "form-control" %> 
  </div>
  <div class="form-group">
    <%= form.label I18n.t('.activerecord.model.instrument.brand') %>
    <%= select_tag 'instrument[brand_id]', options_from_collection_for_select(@brands, 'id', 'fantasy_name'), include_blank: true, id: 'simple-example', class: "form-control" %>
  </div>
  <div class="form-group">
    <%= form.label I18n.t('.activerecord.model.instrument.description') %>
    <%= form.text_area :description,  class: "form-control" %>
  </div>  
  <div class="container">
    <% if @instrument.picture.attached? %>
      <%= image_tag @instrument.picture, style: "width: 200px; display: block" %>
    <% end %>
  </div>
  <div>
    <%= form.label :picture %>
    <%= form.file_field :picture, class: "form-control" %>
  </div>

  <%= form.submit @instrument.new_record? ? I18n.t('.new') : I18n.t('.update'), class: "btn btn-dark" %>
<% end %>
<%= javascript_include_tag 'instruments/select2_form' %>