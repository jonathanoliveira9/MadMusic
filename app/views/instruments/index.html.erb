<div class="container p-1">
  <div class="row">
    <div class="col-sm-9 mx-auto">
    <%= will_paginate(@instruments, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
    </div>
  </div>
</div>

<div class="container">
  <div>
    <%= link_to t('.new'), new_instrument_path, class: "btn btn-dark"  %>
  </div>
</div>
<div class="container">
  <div class="row">
    <% @instruments.order(:created_at).each do |instrument| %>
      <div class="card m-2" style="width: 20rem;">
        <% if instrument.picture.attached? %>
          <div style="background-color: black; width: 100%">
            <%= image_tag instrument.picture, class: 'card-img-top', style: "width: 20rem;heigth: 200px;" %>
          </div>
        <% else%>
          <%= image_tag 'card_default.png', class: 'card-img-top', style: "width: 20rem;heigth: 200px;" %>
        <% end %>
        <div class="card-body">
          <h5 class="card-title"><%= instrument.brand.fantasy_name %> - <%= instrument.serie %></h5>
          <h6 class="card-subtitle mb-2 text-muted"><b><%= t('.price') %>:</b> <%= instrument.price %></h6>
          <p class="card-text"><%= instrument.description %></p>
          <%= link_to  edit_instrument_path(instrument),  class: 'card-link', style: 'text-decoration:none;' do %>
            <i class="fas fa-pen-square"></i>
          <% end %>
          <%= link_to  instrument, method: :delete, data: { confirm: 'Are you sure you want to delete this alert?' } do %>
            <i class="fas fa-trash-alt"></i>
          <% end %>
        </div>
      </div>
    <% end %>
  </div>
</div>
<div class="container p-4">
  <div class="row">
    <div class="col-sm-9 mx-auto">
    <%= will_paginate(@instruments, renderer: WillPaginate::ActionView::Bootstrap4LinkRenderer) %>
    </div>
  </div>
</div>
