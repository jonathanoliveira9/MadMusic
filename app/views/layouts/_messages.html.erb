<% if flash.present? %>
  <script type="text/javascript">
    <% flash.each do |f| %>
      <% type = f[0].to_s %>
      toastr['<%= type %>']('<%= f[1] %>');
    <% end %>
  </script>
<% end %>
<% if notice.present? %>
  <script>
    toastr['success']('<%= notice %>');
  </script>
<% end %>
<% if alert.present? %>
  <script>
    toastr['error']('<%= alert %>');
  </script>
<% end %>